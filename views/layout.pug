doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='/styles/style.css' type="text/css")
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css')
  script(src='https://code.jquery.com/jquery-3.4.1.min.js' integrity='sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=' crossorigin='anonymous')
  script(src="https://d3js.org/d3.v5.min.js")
  script(defer='' src='https://use.fontawesome.com/releases/v5.3.1/js/all.js')
  script(src="/scripts/burger.js")
  title= title
#mainpanel.container.has-background-dark
  nav.navbar.is-dark(role='navigation' aria-label='main navigation')
    .navbar-brand
      a.navbar-item(href='/')
        img(src='/images/temp.png' width='28')
    #start.navbar-menu
      .navbar-start
        a.navbar-item(href="/playlists")
          | Your Playlists
        a.navbar-item(href="/recommended")
          | Recommendations
    .navbar-end
      .navbar-item
        a.button.is-primary(href="/signup")
          | Sign Up
      .navbar-item
        a.button.is-primary(href="/login")
          | Login
      .navbar-item
        a.button.is-danger(href="/logout")
          | Logout
      #burger.navbar-item.is-dark
        a.navbar-burger.burger.is-dark(aria-label='menu' aria-expanded='false' onclick='toggleBurger()' data-target='navbar-start')
          span(aria-hidden='true')
          span(aria-hidden='true')
          span(aria-hidden='true')     
       

  .container.has-background-grey
    .hero
      .hero-body
        h1.title.has-text-centered.has-text-warning.is-size-1#bigtitleheader
          | Fire Mixtapes
  block content